{
  "compilerOptions": {
    "target": "es6", // Оновлено з es5 для сучасніших браузерів
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": false, // Вимкнено для суворішої перевірки типів
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "react-icons/*": ["node_modules/react-icons/*/index.d.ts"]
    },
    "jsxImportSource": "react",
    "types": ["react", "react-dom", "react-icons"] // Додано для явного вказання типів
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}